<form method="get">
    <div class="input-group">
        {% if value %}
            <span class="input-group-btn">
                <a href="{{ app.request|cascada_modify_query({(name): null}) }}" class="btn btn-default">
                    <i class="fa fa-times"></i>
                </a>
            </span>
        {% endif %}
        <input name="{{ name }}" type="text" class="form-control" value="{{ value }}" placeholder="{{ label }}"/>
        {% for key, value in app.request.query.all if key != name and key != page_parameter %}
            {# TODO: This won't work with parameters which values are arrays. #}
            <input type="hidden" name="{{ key }}" value="{{ value }}"/>
        {% endfor %}
        <span class="input-group-btn">
            <button title="Search" type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
        </span>
    </div>
</form>