<div class="table-responsive">
    <table class="table table-curved">
        <thead>
            <tr>
                {% for field in fields %}
                    <th>
                        {{ field.label }}
                    </th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                {{ row_view.render(item)|raw }}
            {% endfor %}
        </tbody>
    </table>
</div>